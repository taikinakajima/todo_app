gem 'sinatra', :github => 'sinatra/sinatra'

gem 'sinatra-contrib'
gem 'activerecord'
gem 'sinatra-activerecord' , :require => 'active_support/all'
gem 'pg'
gem 'rake'
gem "activerecord-postgresql-adapter"

group :development do
  gem 'pg'
end

group :production do
  gem 'pg'
  gem "activerecord-postgresql-adapter"
end